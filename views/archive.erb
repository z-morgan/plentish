<link rel="stylesheet" href="/stylesheets/archive.css">
<script type='text/javascript' src='/javascripts/archive.js'></script>

<h2>Archived Shopping Lists</h2>
<ul id='archive-list'>
  <% if @archive.empty? %>
    <li>You don't have any archived shopping lists yet. When you start a new shopping list, the old lists will show up here.</li>
  <% else %>
    <% @archive.each do |shopping_list| %>
      <li>
        <%= shopping_list['date_created'] %>
        <a href='/archive/<%= shopping_list['id'] %>'></a>
      </li>
    <% end %>
  <% end %>
</ul>